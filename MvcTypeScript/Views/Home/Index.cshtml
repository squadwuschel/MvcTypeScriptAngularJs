@{
    Layout = null;
    ViewBag.Title = "Index";
    int id = 0;
    string[] vornamen = new string[] { "Johannes", "Thomas", "Kai", "Franzi", "Lena", "Daniel", "Rico", "Walter", "Steff" };
    string[] namen = new string[] { "Wurst", "Fleischer", "Bäcker", "Maurer", "Pizzabote", "Lieferjunge", "Dirne" };
    var rnd = new Random();

    //http://nevcal.com/eclectic/UltimateScrollingTable.html
    //http://www.dotnetbull.com/2011/11/scrollable-html-table-with-fixed-header.html
    //http://bl.ocks.org/crstn/3819758
    //https://github.com/laertejjunior/freezeheader/blob/master/js/jquery.freezeheader.js
    //http://geekswithblogs.net/freestylecoding/archive/2011/04/19/html-table-with-fixed-header-and-scrollable-body.aspx
    //https://github.com/alalonde/angular-scrollable-table
}

<div class="row">
    <div class="col-md-12">
        <h3>Home - Index</h3>
    </div>
</div>
<div class="row">


    <div class="col-md-12" sxp-fixed-header>
        <table class="table table-striped table-bordered">
            <thead style="background-color: white">
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Vorname</th>
                <th>Alter</th>
                <th>Geburtsdatum</th>
                <th>Notiz</th>
                <th>Notiz2</th>
                <th>Optionen</th>
            </tr>
            </thead>
            <tbody>
            @for (int i = 0; i < 20; i++)
            {
                <tr>
                    <td>@(i)</td>
                    <td>@vornamen[rnd.Next(0, vornamen.Length)]</td>
                    <td>@namen[rnd.Next(0, namen.Length)]</td>
                    <td>33</td>
                    <td>@rnd.Next(1, 31).03.@rnd.Next(1920, 2015)</td>
                    <td>Das ist meine kurze Notiz für @vornamen[rnd.Next(0, vornamen.Length)]</td>
                    <td>Das ist meine kurze Notiz 2 für @namen[rnd.Next(0, namen.Length)] </td>
                    <td>
                        <a class="btn btn-default btn-xs"><i class="fa fa-fw fa-save"></i></a>
                        <a class="btn btn-primary btn-xs"><i class="fa fa-fw fa-times"></i>&nbsp;Cancel</a>
                        <a class="btn btn-default btn-xs"><i class="fa fa-fw fa-search"></i></a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

