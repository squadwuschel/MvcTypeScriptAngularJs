@{
    Layout = null;
    //Controller: todoEditModalCtrl as todoCtrl
}

<div class="modal-header">
    <h3 class="modal-title">Todo Item Bearbeiten</h3>
</div>
<div class="modal-body form">
    <div class="form-group">
        <label for="exampleInputEmail1">Todo offen</label>
        <div class="checkbox">
            <label>
                <input type="checkbox">
            </label>
        </div>
    </div>
    <div class="form-group">
        <label>Beschreibung</label>
        <input type="text" class="form-control input-sm" placeholder="Beschreibung eingeben" ng-model="todoCtrl.viewModel.Description">
    </div>
    <div class="form-group">
        <label>Zu erledigen bis</label>
        <input type="text" class="form-control input-sm" placeholder="Datum" ng-model="todoCtrl.viewModel.DoDate" name="DoDate" bs-datepicker>
    </div>
    <div class="form-group">
        <label>Ersteller</label>
        <input type="text" class="form-control input-sm" placeholder="Ersteller" ng-model="todoCtrl.viewModel.Creator">
    </div>
    <div class="form-group">
        <label>Priorität</label>
        <select class="form-control input-sm" name="Serverlevel" ng-model="todoCtrl.viewModel.Prioritaet"
                ng-options="item.Value as item.Text for item in todoCtrl.listenService.listEntries.PriorityList"></select>
    </div>

</div>
<div class="modal-footer">
    <button class="btn btn-primary pull-right" ng-click="todoCtrl.save()">OK</button>
    <button class="btn btn-warning pull-left" ng-click="todoCtrl.cancel()">Cancel</button>
</div>
